<%- include('layouts/header.ejs', { user: user }) %>

<!-- Hero Section -->
<div id="main-content" style="display: none;">
    <section class="pt-24 bg-white">
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="w-full mx-auto text-left md:w-11/12 xl:w-9/12 md:text-center">
                <h1 class="mb-8 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-6xl">
                    <span>Organize </span> 
                    <span class="block w-full py-2 text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-purple-500 lg:inline">
                        your book notes
                    </span> 
                    <span>effortlessly</span>
                </h1>
                <p class="px-0 mb-8 text-lg text-gray-600 md:text-xl lg:px-24">
                    Capture ideas, summarize chapters, and keep all your book insights in one place. Tailored for avid readers and lifelong learners.
                </p>
                
                <% if (locals.user) { %>
                    <div class="mb-4 space-x-0 md:space-x-2 md:mb-8">
                        <!-- Get Started Button -->
                        <a href="/profile" 
                           class="inline-flex items-center justify-center w-full px-6 py-3 mb-2 text-lg font-medium text-white bg-green-400 rounded-2xl sm:w-auto sm:mb-0 hover:bg-green-500 transition duration-300">
                            Go Profile
                            <svg class="w-4 h-4 ml-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                        <!-- Login Button -->
                    </div>
                
               <% } else { %>
                <div class="mb-4 space-x-0 md:space-x-2 md:mb-8">
                    <!-- Get Started Button -->
                    <a href="/register" 
                       class="inline-flex items-center justify-center w-full px-6 py-3 mb-2 text-lg font-medium text-white bg-green-400 rounded-2xl sm:w-auto sm:mb-0 hover:bg-green-500 transition duration-300">
                        Get Started
                        <svg class="w-4 h-4 ml-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                    <!-- Login Button -->
                    <a href="/login" 
                       class="inline-flex items-center justify-center w-full px-6 py-3 mb-2 text-lg font-medium text-white bg-green-800 rounded-2xl sm:w-auto sm:mb-0 hover:bg-green-900 transition duration-300">
                        <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12h-3m4 4l-4-4m4-4l-4 4m10 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Go to Login
                    </a>
                </div>
                <% } %>
                 
            </div>
            <!-- Image Section -->
            <div class="w-full mx-auto mt-20 text-center md:w-10/12">
                <div class="relative z-0 w-full mt-8">
                    <div class="relative overflow-hidden shadow-2xl rounded-xl">
                        <div class="flex items-center flex-none px-4 bg-green-400 h-11 rounded-t-xl">
                            <div class="flex space-x-1.5">
                                <div class="w-3 h-3 border-2 border-white rounded-full"></div>
                                <div class="w-3 h-3 border-2 border-white rounded-full"></div>
                                <div class="w-3 h-3 border-2 border-white rounded-full"></div>
                            </div>
                        </div>
                        <img src="/images/dashboard.jpg" alt="Dashboard Preview" class="w-full">
                    </div>
                </div>
            </div>
        </div>
    </section>

<%- include('layouts/footer.ejs') %>

</div>
    